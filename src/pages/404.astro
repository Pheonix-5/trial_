---
import Header from "../components/Header.astro";
import "../css/style.css";
---

<style>
    body {
        font-family: 'Exo 2', sans-serif;
        background: -webkit-repeating-linear-gradient(
            -45deg,
            #f81010,
            #f67f01,
            #a506e4,
            #13cb0c,
            #ca08cd,
            #e80a41,
            #06f1be
        );
        height: 100vh;
        background-size: 400%;
    }

    .errorpage {
        width: 100%;
        height: 100%;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fff;
        box-shadow: 0px 5px 10px rgb(0, 0, 0, 0.5);
    }

    .errorpage,
    content {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .content h1 {
        font-size: 9vmax;
        line-height: 1em;
        position: relative;
    }

    .content h1:after {
        position: absolute;
        content: attr(data-text);
        top: 0;
        left: 0;
        right: 0;
        background: -webkit-repeating-linear-gradient(
            -45deg,
            #71b7e6,
            #69a6ce,
            #b98acc,
            #ee8176,
            #69a6ce,
            #b98acc,
            #9b59b6
        );
        background-size: 400%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 1px 1px 2px rgb(255, 255, 255, 0.25);
        animation: animate 10s ease-in-out infinite;
    }

    @keyframes animate {
        0% {
            background-position: 0 0;
        }

        25% {
            background-position: 100% 0;
        }

        50% {
            background-position: 100% 100%;
        }

        75% {
            background-position: 0 100%;
        }

        100% {
            background-position: 0 0;
        }
    }

    .content h3 {
        font-size: 1.5em;
        margin-bottom: 20px;
        color: #000;
        max-width: 600px;
        position: relative;
    }

    .content h3:after {
        position: absolute;
        content: attr(data-text);
        top: 0;
        left: 0;
        right: 0;
        text-shadow: 1px 1px 2px rgb(255, 255, 255, 0.4);

        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: animate 10s ease-in-out infinite;
    }

    .content p {
        font-size: 1.2em;
    }

    .content .bttns {
        margin: 25px 0;
        display: inline-flex;
    }

    .content .bttns a {
        display: inline-block;
        text-decoration: none;
        margin: 0 10px;
        border: 2px solid #9f4fe5;
        color: #9f4fe5;
        font-weight: 500;
        padding: 10px 25px;
        border-radius: 25px;
        transition: all 0.3s ease;
    }

    .content .bttns a:hover {
        background: #9f4fe5;
        color: #fff;
    }
    .maincontent{
        /* background-color: #000; */
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
</style>
<body>
    <div class="errorpage">
        <div class="content">
            <div class="maincontent">
                <h1 data-text="ERROR 404">ERROR 404</h1>
                <h3 data-text="OOPS! DATA NOT FOUND">OOPS! DATA NOT FOUND</h3>

                <p>
                    Sorry, the data you're looking for doesn't exist.
                </p>
            </div>
            <div class="bttns"><a href="/">RETURN HOME</a>

            </div>
        </div>
    </div>
</body> 
